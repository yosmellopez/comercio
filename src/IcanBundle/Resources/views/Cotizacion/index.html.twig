{% extends 'IcanBundle::layout.html.twig' %}

{% block subtitle %} - Cotizaciones de Productos{% endblock %}

{% block stylesheetspecific %}{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Dashboard</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Cotizaciones de Productos</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Administre las cotizaciones de productos</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-cotizacion" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Cotizaciones de Productos
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-bottom-15">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-2">
                                    <a id="btn-nuevo-cotizacion"
                                       class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                                       href="javascript:;">
							<span>
								<i class="la la-plus"></i>
								<span>
									Nuevo
								</span>
							</span>
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="Fecha inicial"
                                               id="fechaInicial"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="Fecha final"
                                               id="fechaFin"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m_form_search"
                                               placeholder="Buscar...">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <a href="javascript:;" id="btn-filtrar"
                                       class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>Filtrar</span>
                                </span>
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a id="btn-eliminar-cotizacion"
                                       class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m--pull-right"
                                       href="javascript:;">
							<span>
								<i class="la la-trash-o"></i>
								<span>
									Eliminar
								</span>
							</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="cotizacion-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-cotizacion" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-cotizacion-title">
                            ¿Deseas crear un nuevo registro? Sigue los siguientes pasos:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-cotizacion"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="m-portlet__body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active wizard-tab" data-item="1"
                           data-toggle="tab" href="#tab-content-general" id="tab-general">
                            General
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="2"
                           data-toggle="tab" href="#tab-content-productos" id="tab-productos">
                            Productos
                        </a>
                    </li>
                    <li class="nav-item m--hide" id="li-tab-transaccion">
                        <a class="nav-link wizard-tab" data-item="3"
                           data-toggle="tab" href="#tab-content-transaccion" id="tab-transaccion">
                            Transacción Webpay
                        </a>
                    </li>
                </ul>

                <div class="tab-content">

                    <div class="tab-pane active" id="tab-content-general" role="tabpanel">
                        <form class="m-form" id="cotizacion-form" action="#"
                              enctype="multipart/form-data" method="post">

                            <input type="hidden" id="cotizacion_id" name="cotizacion_id"/>

                            <div class="m-form__section m-form__section--first">

                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">1</span>
                                        Para comenzar, seleccione un usuario <span
                                                class="ic-small italic">(opcional)</span>
                                    </label>
                                    <p class="m-form__help">Seleccione un usuario existente para asociarlo a la
                                        cotización</p>
                                    <div class="row">
                                        <div class="col-md-6" id="select-usuario">
                                            <select class="form-control m-select2" id="usuario" name="usuario">
                                                <option value="">Seleccione un usuario</option>
                                                {% for item in usuarios %}
                                                    <option value="{{ item.usuario_id }}"
                                                            data-rut="{{ item.rut }}"
                                                            data-nombre="{{ item.nombre }}"
                                                            data-apellidos="{{ item.apellidos }}"
                                                            data-telefono="{{ item.telefono }}"
                                                            data-email="{{ item.email }}"
                                                            data-calle="{{ item.calle }}"
                                                            data-numero="{{ item.numero }}">{{ item.nombre }} {{ item.apellidos }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">2</span>
                                        Ingrese el rut <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="rut" name="rut"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Ingrese el nombre y apellidos <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>Nombre</label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="nombre" name="nombre"/>
                                        </div>
                                        <div class="col-md-5">
                                            <label>Apellidos</label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="apellidos" name="apellidos"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">4</span>
                                        Ingrese el email y teléfono de contacto
                                        <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend"><span class="input-group-text">@</span>
                                                </div>
                                                <input type="text" class="form-control event-change" id="email"
                                                       name="email">
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                                class="flaticon-support"></i></span>
                                                </div>
                                                <input type="text" class="form-control event-change" id="telefono"
                                                       name="telefono">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">5</span>
                                        Ingrese la dirección <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>Calle</label>
                                            <input type="text" class="form-control form-control-text event-change"
                                                   id="calle" name="calle"/>
                                        </div>
                                        <div class="col-md-3">
                                            <label>Número</label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend"><span class="input-group-text">#</span>
                                                </div>
                                                <input type="text" class="form-control event-change" id="numero"
                                                       name="numero">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">6</span>
                                        Para finalizar, ingrese un comentario
                                        <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <div class="row">
                                        <div class="col-md-12">
                                    <textarea class="form-control event-change" id="comentario"
                                              name="comentario"
                                              rows="6"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane" id="tab-content-productos" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <button id="btn-agregar-productos" class="btn btn-success"
                                        style="margin-bottom: 20px; margin-top: 10px;">
                                    Agregar <i class="la la-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-scrollable">
                                    <table class="table table-striped m-table m-table--head-bg-brand"
                                           id="table-productos">
                                        <thead>
                                        <tr>
                                            <th class="text-center" width="40">#</th>
                                            <th>Nombre</th>
                                            <th>Categoría</th>
                                            <th>Marca</th>
                                            <th class="text-center" width="150">Cantidad</th>
                                            <th class="text-center">Precio</th>
                                            <th class="text-center">Subtotal</th>
                                            <th width="80" class="text-center">Acciones</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-content-transaccion" role="tabpanel">
                        <input type="hidden" id="transaccion_id" name="transaccion_id"/>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">1</span> Transaction Date</label>
                            <p class="m-form__help">Fecha y hora de la autorización</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="transactionDate"
                                           name="transactionDate" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">2</span> Card Number</label>
                            <p class="m-form__help">4 últimos números de la tarjeta de crédito del tarjeta
                                habiente. Solo para comercios autorizados por Transbank se envía el
                                numero
                                completo.</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="cardNumber"
                                           name="cardNumber" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">3</span> Card Expiration Date</label>
                            <p class="m-form__help">Fecha de expiración de la tarjeta de crédito del
                                tarjetahabiente. Solo para comercios autorizados por Transbank.</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="cardExpirationDate"
                                           name="cardExpirationDate" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">4</span> Authorization Code</label>
                            <p class="m-form__help">Código de autorización de la transacción</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="authorizationCode"
                                           name="authorizationCode" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">5</span> Payment Type Code</label>
                            <p class="m-form__help">Tipo de pago de la transacción</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="paymentTypeCode"
                                           name="paymentTypeCode" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">6</span> Response Code</label>
                            <p class="m-form__help">Respuesta de la autorización</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="responseCode"
                                           name="responseCode" disabled/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">7</span> Amount</label>
                            <p class="m-form__help">Monto de la transacción</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-dollar"></i>
                                                        </span>
                                        <input type="text" class="form-control" id="amount"
                                               name="amount" disabled/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">8</span> Shares Amount</label>
                            <p class="m-form__help">Valor de la cuota</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-dollar"></i>
                                                        </span>
                                        <input type="text" class="form-control" id="sharesAmount"
                                               name="sharesAmount" disabled/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label><span class="ic-step-number">9</span> Shares Number</label>
                            <p class="m-form__help">Cantidad de cuotas</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="sharesNumber"
                                           name="sharesNumber" disabled/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="m-form">
                    <div class="m-form__actions text-center">
                        <button id="btn-wizard-anterior"
                                class="btn btn-info m--hide" type="button">
                            Anterior
                        </button>

                        <button id="btn-wizard-siguiente"
                                class="btn btn-primary" type="button">
                            Siguiente
                        </button>
                        <button id="btn-wizard-finalizar" class="btn btn-success m--hide" type="button">
                            Guardar
                        </button>
                        <button class="btn btn-danger cerrar-form-cotizacion" type="button">
                            Cancelar
                        </button>
                    </div>
                </div>

            </div>


        </div>
    </div>

    <div class="modal fade" id="modal-productos" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Productos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="lista-producto">
                        <!--begin: Search Form -->
                        <div class="m-form m-form--label-align-right m--margin-bottom-15">
                            <div class="row align-items-center">
                                <div class="col-xl-12 order-1">
                                    <div class="form-group m-form__group row align-items-center">
                                        <div class="col-md-3">
                                            <select class="form-control m-select2" id="filtro-categoria">
                                                <option value="">Categoría</option>
                                                {% for item in categorias %}
                                                    <option value="{{ item.categoria_id }}"
                                                            class="{{ item.class }}">{{ item.descripcion }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <select class="form-control m-select2" id="filtro-marca">
                                                <option value="">Marca</option>
                                                {% for item in marcas %}
                                                    <option value="{{ item.marcaId }}">{{ item.nombre }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="m-input-icon m-input-icon--left">
                                                <input type="text" class="form-control m-input m_form_search"
                                                       placeholder="Buscar...">
                                                <span class="m-input-icon__icon m-input-icon__icon--left">
                                                    <span><i class="la la-search"></i></span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="javascript:;" id="btn-filtrar-productos"
                                               class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                                <span>
                                                    <i class="la la-search"></i>
                                                    <span>Filtrar</span>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!--end: Search Form -->
                        <!--begin: Datatable -->
                        <div class="m_datatable" id="productos-table-editable"></div>
                        <!--end: Datatable -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsspecific %}
    <script src="{{ asset('bundles/ican/plugins/jquery-rut/jquery.Rut.min.js') }}"></script>
    <script src="{{ asset('bundles/ican/js/pages/cotizaciones.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            Cotizaciones.init();
        });
    </script>
{% endblock %}
